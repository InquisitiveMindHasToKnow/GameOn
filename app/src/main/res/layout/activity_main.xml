<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".08"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/games_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0FD16"
        android:layout_weight=".6"
        >

        <Button
            android:id="@+id/refer_friend_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#0C0F32"
            android:textColor="#FFF"
            android:text="@string/refer_button_text"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/settings_menu"
        android:fitsSystemWindows="true"
        app:itemTextColor="#FFF"
        android:background="#0C1034"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header">

    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="480dp"
            android:orientation="vertical"
            android:background="@drawable/list_of_buttons_background"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="80dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/allButton"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="All" />

                <Button
                    android:id="@+id/mlbButton"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="MLB" />

                <Button
                    android:id="@+id/nflButton"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="NFL" />


                <Button
                    android:id="@+id/nbaButton"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="NBA" />

                <Button
                    android:id="@+id/eplButton"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="EPL" />

                <Button
                    android:id="@+id/nhlButton"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="NHL"/>

                <Button
                android:id="@+id/ncaaButton"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:textColor="#FFF"
                android:text="NCAA"/>

            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>
</LinearLayout>